<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Admin">
	<select id="getPasswd" parameterType="String" resultType="String">
		select passwd from qwadmin where id=#{id}
	</select>
	<select id="getFees" resultType="int">
		select fees from qwadmin
	</select>
	<select id="getAdmin" parameterType="String" resultType="admin.AdminDataBean">
		select * from qwAdmin where id=#{id}
	</select>
	<update id="updateAdmin" parameterType="admin.AdminDataBean">
		update qwAdmin set passwd=#{passwd}, fees=#{fees} where id=#{id}
	</update>
</mapper> 